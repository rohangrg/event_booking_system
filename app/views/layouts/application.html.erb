<!DOCTYPE html>
<html>
  <head>
    <title>Event Booking System</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload" %>
  </head>

  <body>
    <nav class="navbar navbar-light bg-light">
      <div class="container">
        <a class="navbar-brand" href="#">Event Booking System</a>

        <div class="d-flex">
          <% if user_signed_in? %>
            <%= link_to 'All Events', events_path, class: 'btn btn-outline-primary ms-2' %>
            <%= link_to 'My Events', my_events_path, class: 'btn btn-outline-primary ms-2' %>
            <%= link_to 'My Tickets', tickets_path, class: 'btn btn-outline-primary ms-2' %>
            <%= button_to 'Logout', destroy_user_session_path, method: :delete, class: 'btn btn-outline-dark ms-4' %>
          <% else %>
            <% unless request.path == new_user_session_path %>
              <%= link_to 'Log in', new_user_session_path, class: 'btn btn-outline-primary' %>
            <% end %>
            <% unless request.path == new_user_registration_path %>
              <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-outline-primary ms-2' %>
            <% end %>
          <% end %>
        </div>
      </div>
    </nav>

    <div class="container mt-4">
      <%= yield %>
    </div>

  </body>
</html>
